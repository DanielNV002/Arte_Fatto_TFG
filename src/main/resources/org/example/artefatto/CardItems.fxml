<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.artefatto.Controladores.CardItems"
            prefHeight="250" prefWidth="200"
            style="-fx-background-color: #f4f4f4; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd; -fx-padding: 10;">

    <!-- Imagen -->
    <ImageView fx:id="categoriaImagen"
               fitHeight="100"
               fitWidth="170"
               preserveRatio="true"
               layoutX="20"
               layoutY="20"
               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0, 2, 2) -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ddd;" />

    <!-- Nombre de la categoría -->
    <Label fx:id="categoriaNombre"
           layoutX="60"
           layoutY="120"
           style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" />

    <!-- Botón -->
    <Button fx:id="verMasButton"
            layoutX="60"
            layoutY="180"
            prefWidth="80"
            text="Ver más"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" />
</AnchorPane>